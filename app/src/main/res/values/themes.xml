<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IAttendance" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.IAttendance" parent="Base.Theme.IAttendance" />

    <!--    For material toolbar text-->
    <style name="YourCustomTextAppearance" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textSize">17sp</item> <!-- Customize text size -->
        <item name="android:fontFamily">@font/inter_medium</item> <!-- Customize text size -->
        <item name="android:textColor">@color/black</item> <!-- Customize text color -->
        <!-- Add more attributes as needed -->
    </style>

    <!-- Settings styles.xml -->
    <style name="SettingButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">6dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconPadding">12dp</item>
        <item name="iconSize">24dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingButtonRed" parent="SettingButton">
        <item name="android:textColor">@color/red</item>
        <item name="android:letterSpacing">0</item>
    </style>

</resources>