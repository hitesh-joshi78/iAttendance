<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="140dp"
    android:padding="10dp">


    <!--        android:textColor="#02AB6E"-->
    <!--        android:textColor="#E93131"-->
    <TextView
        android:id="@+id/attendanceDate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/absent_date_block_drawable_background"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="1"
        android:textColor="#E93131"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/date_duration_bg"
        android:backgroundTint="@color/alert_bg"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/attendanceDate">

        <ImageButton
            android:id="@+id/calender_imgBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calender_icon"
            app:backgroundTint="#00000000"
            app:tint="@color/dark_grey" />

        <TextView
            android:id="@+id/AttendanceDate_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/inter_medium"
            android:text="Nov 25, Wed"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_access_time_24"
            app:backgroundTint="#00000000"
            app:tint="@color/dark_grey" />

        <TextView
            android:id="@+id/AttendanceTime_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:fontFamily="@font/inter_medium"
            android:text="09:10 AM"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>